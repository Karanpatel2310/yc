<% include ../partials/header %>
<!-- <h1>EDIT FORM</h1> -->
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit <%= campground.name %></h1>
        <div style="width:400px; margin:30px auto;">
            <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[name]" required="" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[image]" required="" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <!-- <input class="form-control" name="description" value="<%= campground.description %>"> -->
                    <textarea class="form-control" name="campground[description]" cols="10" rows="3" required=""><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>         
    </div>
</div>
<% include ../partials/footer %>