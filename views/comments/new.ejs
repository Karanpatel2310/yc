<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Add New Comment To <%= campground.name %></h1>
        <div style="width:400px; margin:30px auto;">
                
            <form action="/campgrounds/<%= campground._id %>/comments" method="POSt">
                <div class="form-group">
                    <textarea class="form-control" required="" name="comment[text]" placeholder="text" cols="10" rows="2"></textarea>
                </div>
                <!-- <div class="form-group">
                    <input type="text" class="form-control" name="comment[author]" placeholder="author">
                </div> -->
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>         
    </div>
</div>
<% include ../partials/footer %>